@model IEnumerable<Book.Models.Books>

@{
    ViewBag.Title = "バーチャル図書館ようこそ！";
    Layout = "~/Views/Shared/_BookLayout.cshtml";
}

<h2>Top</h2>

<p>
    @Html.ActionLink("好きな本をレコード", "Create")
</p>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookPrice)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.IsEable)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>操作</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookPrice)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsEable)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.ActionLink("編集します", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("見ます", "Details", new { id = item.ID }) |
                    @Html.ActionLink("消えろ", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
}

